<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="10dp"
            android:columnCount="2"
            app:layout_constraintBottom_toTopOf="@+id/city_list">
            <Button
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:text="Add City"
                android:textSize="20sp"
                android:id="@+id/add_city">
            </Button>
            <Button
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:text="Delete City"
                android:textSize="20sp"
                android:id="@+id/del_city">
            </Button>
        </GridLayout>
        <ListView
            android:id="@+id/city_list"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:translationY="10dp"
            android:listSelector="@android:color/darker_gray"
            android:choiceMode="singleChoice"
            app:layout_constraintTop_toBottomOf="@+id/grid_layout">

        </ListView>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="10dp"
            android:visibility="invisible"
            android:id="@+id/add_grid">
            <EditText
                android:layout_columnWeight="0.9"
                android:layout_height="match_parent"
                android:id="@+id/city_name_input"
                android:inputType="text">
            </EditText>
            <Button
                android:layout_columnWeight="0.1"
                android:layout_height="match_parent"
                android:id="@+id/confirm_button"
                android:text="Confirm"
                android:textSize="20sp">

            </Button>
        </GridLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>